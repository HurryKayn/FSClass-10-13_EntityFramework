@model Cliente
@{
}
<h1> Nuovo Cliente </h1>
<form asp-action="NuovoCliente">
    <div class="form-group">
        <label  asp-for="ClienteId" class="control-label"></label>
        <input asp-for="ClienteId" class="form-control"/>
        <span asp-validation-for="ClienteId" class="text-danger"></span>
    </div>
    <div  class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cognome" class="control-label" ></label>
        <input asp-for="Cognome" class="form-control" />
        <span asp-validation-for="Cognome" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Data" class="control-label"></label>
        <input asp-for="Data" class="form-control" />
        <span asp-validation-for="Data" class="text-danger"></span>
    </div>

    <div class="form-group">
           <label asp-for="Ora" class="control-label"></label>
           <input asp-for="Ora" class=" form-control" />
        <span asp-validation-for="Ora" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Attivo" class="control-label"></label>
        <input asp-for="Attivo"  />
        <span asp-validation-for="Attivo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Numero" class="control-label"></label>
        <input asp-for="Numero" />
        <span asp-validation-for="Numero" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Zona"></label>
        <select asp-for="Zona" class="form-control"/>
        @{int  i=0;}
        @foreach (var item in Enum.GetValues(typeof(eZona)))
        {
            if (i==0)
            {
                <option value="@item"> Seleziona la zona </option>
                i++;
            }
            else
            {
              <option value="@item"> @item</option>
            }
            
        }
        <span asp-validation-for="Zona" class="text-danger"></span>
    </div>
    

    <div class="form-group">
        <input type="submit" value="Salva" class="btn  btn-primary" />
    </div>
</form>